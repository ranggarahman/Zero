<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/quizProgressBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="0"
        android:layout_gravity="top"
        android:progressDrawable="@drawable/progress_bar_drawable" />

    <include
        android:id="@+id/fillblank_layout"
        layout="@layout/fillblank_quiz"
        android:visibility="gone"/>

    <include
        android:id="@+id/trueorfalse_layout"
        layout="@layout/trueorfalse_quiz"
        android:visibility="gone"/>

    <include
        android:id="@+id/multiplechoice_layout"
        layout="@layout/multiplechoice_quiz"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        app:cornerRadius="16dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/jktsans_bold"
        android:text="Cek Jawaban"/>

</FrameLayout>