<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scroll_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.reads.ReadsActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reads_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jktsans_bold"
        android:textColor="@color/textPrimary"
        android:textSize="32sp"
        android:text="Bacaan 1" />

    <TextView
        android:id="@+id/reads_subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jktsans_regular"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/textPrimary"
        android:text="Geser kebawah untuk membaca lebih" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>